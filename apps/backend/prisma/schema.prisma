generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  projects  Project[]
}

model Project {
  id            String           @id @default(uuid())
  title         String
  initialPrompt String
  userId        String           @unique
  user          User             @relation(fields: [userId], references: [id])
  contexts      ProjectContext[]
  conversations Conversation[]
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
}

model ProjectContext {
  id        String      @id @default(uuid())
  projectId String      @unique
  project   Project     @relation(fields: [projectId], references: [id])
  type      ContextType
  content   String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

enum ContextType {
  SEMANTIC
  PROCEDURAL
  EPISODIC
}

model Conversation {
  id        String           @id @default(uuid())
  projectId String
  from      MessageFrom
  type      ConversationType
  project   Project          @relation(fields: [projectId], references: [id])
  contents  String
  toolCall  ToolCall?
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
}

enum ConversationType {
  TOOL_CALL
  TEXT_MESSAGE
  ERROR_MESSAGE
}

enum MessageFrom {
  USER
  AGENT
}

enum ToolCall {
  CREATE_FILE
  READ_FILE
  DELETE_FILE
  EXECUTE_COMMAND
  RENAME_FILE
  LIST_DIRECTORIES
  GET_CONTEXT
  SAVE_CONTEXT
  TEST_BUILD
  WRITE_MULTIPLE_FILES
  CHECK_MISSING_DEPENDENCIES
}
